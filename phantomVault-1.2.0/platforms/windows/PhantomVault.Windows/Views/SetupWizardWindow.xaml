<Window x:Class="PhantomVault.Windows.SetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Setup Wizard" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <StackPanel Margin="32">
            <TextBlock Text="Welcome to Phantom Vault" 
                      Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                      Foreground="{StaticResource MaterialDesignBody}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32" />
            
            <TextBlock Text="Let's set up your first secure vault" 
                      Style="{StaticResource MaterialDesignBody1TextBlock}"
                      Foreground="{StaticResource MaterialDesignBody}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32" />
            
            <materialDesign:PackIcon Kind="Shield" 
                                   Width="64" 
                                   Height="64" 
                                   Foreground="{StaticResource MaterialDesignBody}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,32" />
            
            <Button Content="Get Started" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   HorizontalAlignment="Center"
                   Padding="32,16"
                   Click="GetStarted_Click" />
        </StackPanel>
    </Grid>
</Window>
