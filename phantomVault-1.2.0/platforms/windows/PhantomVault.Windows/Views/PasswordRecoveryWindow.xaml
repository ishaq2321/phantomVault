<Window x:Class="PhantomVault.Windows.PasswordRecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Password Recovery" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <StackPanel Margin="32">
            <TextBlock Text="Password Recovery" 
                      Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                      Foreground="{StaticResource MaterialDesignBody}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32" />
            
            <TextBlock Text="Answer your security questions to recover access" 
                      Style="{StaticResource MaterialDesignBody1TextBlock}"
                      Foreground="{StaticResource MaterialDesignBody}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32" />
            
            <materialDesign:PackIcon Kind="Key" 
                                   Width="48" 
                                   Height="48" 
                                   Foreground="{StaticResource MaterialDesignBody}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,32" />
            
            <Button Content="Recover Password" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   HorizontalAlignment="Center"
                   Padding="32,16"
                   Click="RecoverPassword_Click" />
        </StackPanel>
    </Grid>
</Window>
