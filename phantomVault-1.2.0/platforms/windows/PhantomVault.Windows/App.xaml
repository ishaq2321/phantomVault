<Application x:Class="PhantomVault.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Phantom Vault Theme -->
            <Style x:Key="PhantomVaultTheme" TargetType="FrameworkElement">
                <Setter Property="Background" Value="#1B1F3B" />
                <Setter Property="Foreground" Value="#F6F6F6" />
            </Style>
            
            <!-- Custom Button Styles -->
            <Style x:Key="PhantomVaultButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Background" Value="#2D3250" />
                <Setter Property="Foreground" Value="#F6F6F6" />
                <Setter Property="BorderBrush" Value="#424769" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="Margin" Value="4" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#424769" />
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="#7077A1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Critical Action Button -->
            <Style x:Key="PhantomVaultCriticalButton" TargetType="Button" BasedOn="{StaticResource PhantomVaultButton}">
                <Setter Property="Background" Value="#F15412" />
                <Setter Property="Foreground" Value="White" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF6B3A" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Card Styles -->
            <Style x:Key="PhantomVaultCard" TargetType="Border">
                <Setter Property="Background" Value="#2D3250" />
                <Setter Property="BorderBrush" Value="#424769" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Margin" Value="8" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="4" BlurRadius="8" />
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Text Styles -->
            <Style x:Key="PhantomVaultTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#F6F6F6" />
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>
            
            <Style x:Key="PhantomVaultSubtitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="#B4B4B4" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            
            <!-- Input Styles -->
            <Style x:Key="PhantomVaultTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                <Setter Property="Background" Value="#1B1F3B" />
                <Setter Property="Foreground" Value="#F6F6F6" />
                <Setter Property="BorderBrush" Value="#424769" />
                <Setter Property="Margin" Value="0,8" />
            </Style>
            
            <Style x:Key="PhantomVaultPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
                <Setter Property="Background" Value="#1B1F3B" />
                <Setter Property="Foreground" Value="#F6F6F6" />
                <Setter Property="BorderBrush" Value="#424769" />
                <Setter Property="Margin" Value="0,8" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
