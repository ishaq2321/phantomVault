<Window x:Class="PhantomVault.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Phantom Vault" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MaterialDesignPaper}"
        TextElement.Foreground="{StaticResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{StaticResource MaterialDesignFont}">
    
    <Window.Resources>
        <!-- Animation for window reveal -->
        <Storyboard x:Key="RevealAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0" To="1" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                           From="0.8" To="1" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                           From="0.8" To="1" Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource RevealAnimation}" />
        </EventTrigger>
    </Window.Triggers>
    
    <Window.RenderTransform>
        <ScaleTransform ScaleX="1" ScaleY="1" />
    </Window.RenderTransform>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource MaterialDesignDarkBackground}"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Shield" 
                                           Width="32" 
                                           Height="32" 
                                           Foreground="{StaticResource MaterialDesignBody}"
                                           VerticalAlignment="Center" />
                    <TextBlock Text="Phantom Vault" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              Foreground="{StaticResource MaterialDesignBody}"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0" />
                </StackPanel>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <Ellipse Width="8" 
                            Height="8" 
                            Fill="{Binding StatusColor, FallbackValue=Green}"
                            Margin="0,0,8,0" />
                    <TextBlock Text="{Binding StatusText, FallbackValue=Secure}" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="{StaticResource MaterialDesignBody}" />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal">
                    <Button Content="Settings" 
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Command="{Binding OpenSettingsCommand}"
                           Margin="8,0" />
                    <Button Content="Minimize to Tray" 
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Command="{Binding MinimizeToTrayCommand}"
                           Margin="8,0" />
                    <Button Content="Exit" 
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Command="{Binding ExitCommand}"
                           Margin="8,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                   Background="{StaticResource MaterialDesignDarkBackground}"
                   BorderBrush="{StaticResource MaterialDesignDivider}"
                   BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Quick Actions -->
                        <TextBlock Text="Quick Actions" 
                                  Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                  Foreground="{StaticResource MaterialDesignBody}"
                                  Margin="0,0,0,16" />
                        
                        <Button Content="Add New Vault" 
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{Binding AddVaultCommand}"
                               Margin="0,0,0,8" />
                        
                        <Button Content="Import Vault" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding ImportVaultCommand}"
                               Margin="0,0,0,8" />
                        
                        <Button Content="Backup All Vaults" 
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding BackupAllCommand}"
                               Margin="0,0,0,16" />

                        <!-- Vault List -->
                        <TextBlock Text="Secure Vaults" 
                                  Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                  Foreground="{StaticResource MaterialDesignBody}"
                                  Margin="0,0,0,16" />
                        
                        <ItemsControl ItemsSource="{Binding Vaults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PhantomVaultCard}"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <materialDesign:PackIcon Kind="Folder" 
                                                                   Grid.Column="0"
                                                                   Width="24" 
                                                                   Height="24" 
                                                                   Foreground="{StaticResource MaterialDesignBody}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,12,0" />
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}"
                                                          FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Description}" 
                                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}"
                                                          TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:MMM dd, yyyy}'}" 
                                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}" />
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" 
                                                      Orientation="Horizontal">
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                       Command="{Binding DataContext.UnlockVaultCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Margin="2">
                                                    <materialDesign:PackIcon Kind="LockOpen" 
                                                                           Width="16" 
                                                                           Height="16" />
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                       Command="{Binding DataContext.LockVaultCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Margin="2">
                                                    <materialDesign:PackIcon Kind="Lock" 
                                                                           Width="16" 
                                                                           Height="16" />
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                       Command="{Binding DataContext.DeleteVaultCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Margin="2">
                                                    <materialDesign:PackIcon Kind="Delete" 
                                                                           Width="16" 
                                                                           Height="16" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1" 
                   Background="{StaticResource MaterialDesignPaper}">
                <ContentControl Content="{Binding CurrentView}" />
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
               Background="{StaticResource MaterialDesignDarkBackground}"
               BorderBrush="{StaticResource MaterialDesignDivider}"
               BorderThickness="0,1,0,0"
               Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                          Foreground="{StaticResource MaterialDesignBody}"
                          VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <TextBlock Text="{Binding VaultCount, StringFormat='{}{0} vaults'}" 
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              Foreground="{StaticResource MaterialDesignBody}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0" />
                    <TextBlock Text="{Binding Version, StringFormat='v{0}'}" 
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              Foreground="{StaticResource MaterialDesignBody}"
                              VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
