<Window x:Class="PhantomVault.Windows.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Dashboard" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource MaterialDesignDarkBackground}"
                Padding="16">
            <StackPanel>
                <TextBlock Text="Dashboard" 
                          Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                          Foreground="{StaticResource MaterialDesignBody}" />
                <TextBlock Text="Overview of your secure vaults" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="{StaticResource MaterialDesignBody}" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- Quick Actions -->
                <Border Style="{StaticResource PhantomVaultCard}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  Style="{StaticResource PhantomVaultTitle}" />
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Lock All Vaults" 
                                   Style="{StaticResource PhantomVaultCriticalButton}"
                                   Command="{Binding QuickLockAllCommand}"
                                   Margin="0,0,8,0" />
                            <Button Content="Unlock All Vaults" 
                                   Style="{StaticResource PhantomVaultButton}"
                                   Command="{Binding QuickUnlockAllCommand}"
                                   Margin="8,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Statistics -->
                <Border Style="{StaticResource PhantomVaultCard}">
                    <StackPanel>
                        <TextBlock Text="Statistics" 
                                  Style="{StaticResource PhantomVaultTitle}" />
                        
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="{Binding TotalVaults}" 
                                          Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                                <TextBlock Text="Total Vaults" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="{Binding LockedVaults}" 
                                          Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                          Foreground="Red"
                                          HorizontalAlignment="Center" />
                                <TextBlock Text="Locked" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                <TextBlock Text="{Binding UnlockedVaults}" 
                                          Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                          Foreground="Green"
                                          HorizontalAlignment="Center" />
                                <TextBlock Text="Unlocked" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="{Binding TotalSize, StringFormat='{}{0:N0} MB'}" 
                                          Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                                <TextBlock Text="Total Size" 
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          Foreground="{StaticResource MaterialDesignBody}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Vaults -->
                <Border Style="{StaticResource PhantomVaultCard}">
                    <StackPanel>
                        <TextBlock Text="Recent Vaults" 
                                  Style="{StaticResource PhantomVaultTitle}" />
                        
                        <ItemsControl ItemsSource="{Binding RecentVaults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PhantomVaultCard}"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <materialDesign:PackIcon Kind="Folder" 
                                                                   Grid.Column="0"
                                                                   Width="24" 
                                                                   Height="24" 
                                                                   Foreground="{StaticResource MaterialDesignBody}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,12,0" />
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}"
                                                          FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Description}" 
                                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}"
                                                          TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:MMM dd, yyyy}'}" 
                                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}" />
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" 
                                                      Orientation="Horizontal">
                                                <Ellipse Width="8" 
                                                        Height="8" 
                                                        Fill="{Binding IsLocked, Converter={StaticResource BooleanToColorConverter}}"
                                                        VerticalAlignment="Center"
                                                        Margin="4,0" />
                                                <TextBlock Text="{Binding Status}" 
                                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                          Foreground="{StaticResource MaterialDesignBody}"
                                                          VerticalAlignment="Center"
                                                          Margin="4,0,0,0" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
