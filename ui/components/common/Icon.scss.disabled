.icon {
  display: inline-block;
  vertical-align: middle;
  color: currentColor;
  transition: all 0.2s ease;

  &--small {
    width: 16px;
    height: 16px;
  }

  &--medium {
    width: 24px;
    height: 24px;
  }

  &--large {
    width: 32px;
    height: 32px;
  }

  &:hover {
    opacity: 0.8;
  }
}
