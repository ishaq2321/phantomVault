{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true
  },
  "include": [
    "electron/**/*"
  ],
  "exclude": [
    "src/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}